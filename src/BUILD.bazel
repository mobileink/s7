cc_library(
    name  = "s7",
    linkstatic = 0,
    srcs  = ["s7.c", "mus-config.h"],
    hdrs  = ["s7.h"],
    copts = select({
        # "//:macos": ["-std=c11"],
        # "//:linux": ["-std=gnu11"],
        "//conditions:default": ["-std=c11"],
    }) + [
        # "-pedantic-errors",
        # "-Wextra",
        "-I$(GENDIR)/src"
    ],
    linkopts = select({
        # "//:macos": ["-std=c11"],
        # "//:linux": ["-std=gnu11"],
        "//conditions:default": []
    }) + ["-lm"],
    visibility = ["//visibility:public"]
)

